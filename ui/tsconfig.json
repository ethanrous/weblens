{
	"compilerOptions": {
		"target": "es2023",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"types": [
			"node",
			"vite/client"
		],
		"allowJs": false,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@weblens/*": [
				"src/*"
			],
			"react": [
				"./node_modules/@types/react"
			]
		},
		"noUnusedLocals": false
	},
	"include": [
		"**/*.tsx",
		"**/*.ts",
		"src",
		"eslint.config.js"
	],
	"exclude": [
		"node_modules"
	]
}
